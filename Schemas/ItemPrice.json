{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.synergyworldwide.com/cosmos-schemas/Item/item-price.schema.json",
  "description": "The document type storing the item pricing information",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "item_price"
    },
    "sku": {
      "type": "string",
      "description": "a partition key"
    },
    "iso2CountryCode": {
      "type": "string"
    },
    "itemWeight": {
      "type": "number"
    },
    "wholesale": {
      "$refs": "#/$defs/priceItem"
    },
    "retail": {
      "$refs": "#/$defs/priceItem"
    },
    "online": {
      "$refs": "#/$defs/priceItem"
    },
    "other": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "priceTypeId": {
            "type": "string"
          },
          "pricyTypeName": {
            "type": "string"
          },
          "salesPrice": {
            "type": "number"
          },
          "qualValue": {
            "type": "number"
          },
          "commValue": {
            "type": "number"
          }
        },
        "required": [
          "priceTypeId"
        ]
      }
    },
    "currentVatRate": {
      "type": "number"
    }
  },
  "$defs": {
    "priceItem": {
      "type": "object",
      "properties": {
        "salesPrice": {
          "type": "number"
        },
        "qualValue": {
          "type": "number"
        },
        "commValue": {
          "type": "number"
        }
      }
    }
  },
  "required": [
    "type",
    "sku",
    "iso2CountryCode"
  ]
}