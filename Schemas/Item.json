{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.synergyworldwide.com/cosmos-schemas/Item/item.schema.json",
  "description": "The document type storing the item related information",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "item"
    },
    "sku": {
      "type": "string",
      "description": "a partition key"
    },
    "iso2CountryCode": {
      "type": "string"
    },
    "itemId": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "localizedName": {
      "type": "string"
    },
    "active": {
      "type": "boolean"
    }
  },
  "required": [
    "type",
    "sku",
    "iso2CountryCode",
    "itemId"
  ]
}