{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.synergyworldwide.com/cosmos-schemas/Product/display-information.schema.json",
  "description": "The document type storing the product/option display information",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "display_information"
    },
    "iso2CountryCode": {
      "type": "string",
      "maxLength": 2,
      "description": "a partition key"
    },
    "sku": {
      "type": "string"
    },
    "displayInfoID": {
      "type": "string",
      "description": "The unique identifier for a display information. Migrated values are converted from int, new values are UUIDs."
    },
    "itemName": {
      "type": "string"
    },
    "localizedName": {
      "type": "string"
    },
    "active": {
      "type": "boolean"
    },
    "groupDisplayOrder": {
      "type": "integer"
    },
    "singleDisplayOrder": {
      "type": "integer"
    },
    "showBenefits": {
      "type": "boolean"
    },
    "showRecommended": {
      "type": "boolean"
    },
    "showIngredients": {
      "type": "boolean"
    },
    "showSuppFacts": {
      "type": "boolean"
    },
    "splitSku": {
      "type": "boolean"
    },
    "shortDesc": {
      "type": "string"
    },
    "longDesc": {
      "type": "string"
    },
    "maxPerOrder": {
      "type": "integer"
    },
    "maxPerMonth": {
      "type": "integer"
    },
    "maxPerMonthAutoship": {
      "type": "integer"
    },
    "showUnavailableMessage": {
      "type": "boolean"
    },
    "unavailableMessage": {
      "type": "string"
    }
  },
  "required": [
    "type",
    "sku",
    "iso2CountryCode",
    "displayInfoID",
    "groupDisplayOrder",
    "singleDisplayOrder",
    "showBenefits",
    "showRecommended",
    "showIngredients",
    "showSuppFacts",
    "showUnavailableMessage",
    "splitSku",
    "maxPerOrder",
    "maxPerMonth",
    "maxPerMonthAutoship"
  ]

}